<section>
  <table class="actor-sheet-stat-table">
    <caption class="actor-sheet-stats-table-label">
      {{localize "ikrpg.actorSheetLabels.damageCapacityBlock.title"}}
    </caption>
    <tr class="actor-sheet-damage-capacity-phy-group">
      <td>
        <label>{{localize "ikrpg.actorSheetLabels.damageCapacityBlock.groupOne"}}</label>
      </td>
      <td>
        <table>
          <tr>
            <td>
              1
            </td>
            <td>
              <div class="actor-sheet-damage-capacity-checkbox-line">
                {{#times data.line1.max.value}}
                  <input
                    class="line1 vital-check"
                    type="checkbox"
                    {{checked (ifCond data.line1.current.value "<=" @index)}}
                  />
                {{/times}}
              </div>
            </td>
          </tr>
          <tr>
            <td>
              2
            </td>
            <td>
              <div class="actor-sheet-damage-capacity-checkbox-line">
