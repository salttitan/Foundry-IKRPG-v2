<section>
    <table class="actor-sheet-stat-table">
        <caption class="actor-sheet-stats-table-label">
            {{localize "ikrpg.actorSheetLabels.xpBlock.title"}}
        </caption>
        <tr>
            <td>
                <div class="actor-sheet-stat-value">
                <input
                  name="data.featPoints.value"
                  class="actor-sheet-stat-box stat  commandRange-stat"
                  type="text"
                  value="{{data.featPoints.value}}"
                  data-type="Number"
                />
                <label class="actor-sheet-stat-name-label">
                  {{localize "ikrpg.actorSheetLabels.xpBlock.feats"}}
                </label>
              </div>
            </td>
            <td>
                <div class="actor-sheet-stat-value">
                <input
                  name="data.header.xpEarned.value"
                  class="actor-sheet-xp-stat-box xp-stat"
                  type="text"
                  value="{{data.header.xpEarned.value}}"
                  data-type="Number"
                />
                <label class="actor-sheet-stat-name-label">
                  {{localize "ikrpg.actorSheetLabels.xpBlock.xp"}}
                </label>
              </div>
            </td>
            <td>
                <div class="actor-sheet-stat-value">
                  <label class="level-label">
                    {{#if (ifCond data.header.xpEarned.value "<" 50)}}
                      {{localize "ikrpg.actorSheetLabels.xpBlock.levels.hero"}}
                    {{else}}
                      {{#if (ifCond data.header.xpEarned.value "<" 100)}}
                        {{localize "ikrpg.actorSheetLabels.xpBlock.levels.veteran"}}
                      {{else}}
                        {{localize "ikrpg.actorSheetLabels.xpBlock.levels.epic"}}
                      {{/if}}
                    {{/if}}
                  </label>
                  <label class="actor-sheet-header-field-name-label">
                      {{localize "ikrpg.actorSheetLabels.xpBlock.level"}}
                  </label>
                </div>
            </td>
        </tr>
    </table>
</section>