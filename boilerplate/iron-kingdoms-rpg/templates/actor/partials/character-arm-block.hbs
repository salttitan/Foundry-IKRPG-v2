<section>
    <table class="actor-sheet-stat-table">
        <caption class="actor-sheet-stats-table-label">
            {{localize "ikrpg.actorSheetLabels.armBlock.title"}}
        </caption>
        <tr>
            <td>
                <div class="actor-sheet-stat-value">
                <input
                  class="actor-sheet-stat-box"
                  type="text"
                  value="{{data.arm.value}}"
                  data-type="Number"
                  disabled=true
                />
                <label class="actor-sheet-stat-name-label">
                  {{localize "ikrpg.actorSheetLabels.armBlock.total"}}
                </label>
              </div>
            </td>
            <td>=</td>
            <td>
                <div class="actor-sheet-stat-value">
                <input
                  class="actor-sheet-stat-box"
                  type="text"
                  value="{{data.stats.phy.value}}"
                  data-type="Number"
                  disabled=true
                />
                <label class="actor-sheet-stat-name-label">
                  {{localize "ikrpg.actorSheetLabels.statBlock.phy"}}
                </label>
              </div>
            </td>
            <td>
                {{localize "ikrpg.actorSheetLabels.armBlock.shield"}}
            </td>
            <td>
                {{localize "ikrpg.actorSheetLabels.armBlock.armor"}}
            </td>
            <td>
              <div class="actor-sheet-stat-value">
                <input
                  name="data.armModifiers.otherModifier.value"
                  class="actor-sheet-stat-box stat arm-stat"
                  type="text"
                  value="{{data.armModifiers.otherModifier.value}}"
                  data-type="Number"
                />
                <label class="actor-sheet-stat-name-label">
                  {{localize "ikrpg.actorSheetLabels.armBlock.other"}}
                </label>
              </div>
            </td>
        </tr>
    </table>
</section>